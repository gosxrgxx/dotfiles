# Default
# ---
alias ls='ls -l --color=auto'
alias lsa='ls -la --color=auto'
alias c='clear'
alias h='history'
alias open='xdg-open'
alias erase='shred -uvz'

# Pacman
# ---
alias p-='sudo pacman'
alias p-s='sudo pacman -S'
alias p-ss='sudo pacman -Ss'
alias p-si='sudo pacman -Si'
alias p-u='sudo pacman -Syu'
alias p-qs='sudo pacman -Qs'
alias p-rsn='sudo pacman -Rsn'

# Fast edit
# ---
alias e-xinitrc='sudo subl ~/.xinitrc'
alias e-bspwm='chezmoi edit ~/.config/bspwm/bspwmrc'
alias e-sxhkd='chezmoi edit ~/.config/sxhkd/sxhkdrc'
alias e-alias='chezmoi edit ~/.oh-my-zsh/custom/alias.zsh'
alias e-picom='chezmoi edit ~/.config/picom.conf'
alias e-polybar='chezmoi edit ~/.config/polybar/config.ini'

